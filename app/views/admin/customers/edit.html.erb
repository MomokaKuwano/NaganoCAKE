<div class="container">
  <div class="row mx-auto col-10">
      <h5 class="my-5">
        <span class="px-3">
          <%= @customer.last_name%>
          <%= @customer.first_name %>さんの会員情報編集
        </span>
      </h5>
  </div>

  　  <div class="row mx-auto">
        <div class="col-2 offset-1">
          会員ID
        </div>
        <div class="col-5">
          <%= @customer.id %>
        </div>
    </div>
    
    <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
  　<div class="field">
  　  <p>名前</p>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>
  
    <div class="field">
      <p>フリガナ</p>
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </div>
  
    <div class="field">
      <%= f.label :postal_code, "郵便番号" %><br />
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>
  
    <div class="field">
      <%= f.label :address, "住所" %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>
  
    <div class="field">
      <%= f.label :telephone_number, "電話番号" %><br />
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </div>
  
      <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  
    <div>
       <%= f.label :is_deleted, "会員ステータス" %>
       <%= f.radio_button :is_deleted, :false %>
       <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
       <%= f.radio_button :is_deleted, :true %>
       <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
    </div>
  
    <div class="actions">
      <%= f.submit "変更を保存" %>
    </div>
  
  <% end %>
</div>