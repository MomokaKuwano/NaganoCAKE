<div class="container">
  <div class="row mx-auto col-10">
      <h5 class="my-5">
        <span1 class="px-3">
          ジャンル一覧・追加
         </span1>
      </h5>
    </div>

      <div class="row mx-auto mb-5">
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
          <div class="row mb-3">
            <div class="col-3">
              <%= f.label :name, "ジャンル名" %>
            </div>
            <div class="col-6">
              <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
            </div>
            <div class="col-3">
              <%= f.submit "新規登録", class: "btn btn-success" %>
            </div>
          </div>
      </div>
    <% end %>

    <div class="row justify-content-evenly">
      <table class="table col-4">
        <thead class="table-light">
          <tr>
            <th>
              ジャンル
            </th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td class="col-4">
            <%= genre.name %>
            </td>
            <td class="col-2">
            <%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm" %></br>
            </td>
             <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>




