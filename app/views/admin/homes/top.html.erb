<h3>注文履歴一覧</h3>
<table>

  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
    </tr>
  </thead>

  <tbody>
     <% @orders.each do |order|%>
    <tr>
      <td>
        <%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admin_order_path(order.id) %>
      </td>
      <td>
        <%= order.name %>
      </td>
      <td>
        <% @order_details = order.order_details %>
        <% @order_details.each do |order_detail| %>
        <% @total_amount += order_detail.amount %>
        <% end %>
        <%= @total_amount %>
        <% @total_amount = 0 %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

