<div class="container">
  <div class="row">
    <div class="mx-auto col-10">
      <h5 class="my-5">
        <span class="px-3">
          商品編集
         </span>
      </h5>
    </div>
    <div class="row mx-auto col-7">
      <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
  
      <div class="field mb-2">
        <%= f.label :image, "商品画像" %>
        <%= f.file_field :image, accept: "image/*" %>
      </div>
  
      <div class="field mb-2">
        <%= f.label :name, "商品名" %>
        <%= f.text_field :name, autofocus: true %>
      </div>
  
      <div class="field mb-2">
        <%= f.label :introduction, "商品説明" %>
        <%= f.text_area :introduction %>
      </div>
  
      <div class="field mb-2">
         <%= f.label :genre_id, "ジャンル" %>
         <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "--選択してください--") %>
      </div>
  
      <div class="field mb-2">
        <%= f.label :price, "税抜価格" %>
        <%= f.text_field :price %>
      </div>
  
      <div class="field mb-2">
         <%= f.label :is_active, "販売ステータス" %>
         <%= f.radio_button :is_active, :true %>
         <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
         <%= f.radio_button :is_active, :false %>
         <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
      </div>
       <div class="actions mx-auto col-3 mt-4">
       <%= f.submit '変更を保存', class: "btn btn-success" %>
       </div>
  
      <% end %>
    </div>
  </div>
</div>