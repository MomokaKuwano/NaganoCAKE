<h3>商品新規登録</h3>

<%= form_with model: @item, url: new_admin_item_path do |f| %>

<div class="field">
  <%= f.label :image, "商品画像" %>
  <%= f.file_field :image, accept: "image/*" %>
</div>

<div class="field">
  <%= f.label :name, "商品名" %>
  <%= f.text_field :name, autofocus: true, autocomplete: "name"%>
</div>

<div class="field">
  <%= f.label :introduction, "商品説明" %>
  <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction"%>
</div>

<div class="field">
   <%= f.label :genres, "ジャンル" %>
   <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "--選択してください--") %>

 </div>

<div class="field">
  <%= f.label :price, "税抜価格" %>
  <%= f.text_field :price, autofocus: true, autocomplete: "price"%>
</div>

<div class="field">
   <%= f.label :is_active, "販売ステータス" %>
   <%= f.radio_button :is_active, :true %>
   <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
   <%= f.radio_button :is_active, :false %>
   <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
</div>

 <%= f.submit '新規登録' %>

<% end %>