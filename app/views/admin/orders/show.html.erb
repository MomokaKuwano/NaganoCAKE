<h3>注文履歴詳細</h3>
    <div>
        購入者  <%= @order.customer.last_name %>
        <%= @order.customer.first_name %>
    </div>

    <div>
        注文日  <%= @order.created_at.strftime("%Y-%m-%d") %>
    </div>

    <div>
        配送先
        〒<%= @order.postal_code %>
        <%= @order.address %><br>
        <%= @order.name %>
    </div>

    <div>
        支払方法 <%= @order.payment_method_i18n %>
    </div>

    <div>
        注文ステータス
    </div>
    <table>
        <thead>
            <tr>
                <th>商品名</th>
                <th>単価（税込）</th>
                <th>数量</th>
                <th>小計</th>
                <th>製作ステータス</th>
            </tr>
        </thead>
        <tbody>
            <% @sum = 0 %>
            <% @order_details.each do |order_detail|%>
            <tr>
                <td>
                     <%= order_detail.item.name %>
                </td>
                <td>
                    <%= order_detail.item.add_tax_price.to_s(:delimited) %>
                </td>
                <td>
                    <%= order_detail.amount %>
                </td>
                <td>
                    <%= order_detail.sum.to_s(:delimited) %>
                    <% @sum += order_detail.sum %>
                </td>
                <td>

                </td>
            </tr>
        <% end %>
        </tbody>
    </table>

    <div>
      商品合計  <%= @sum.to_s(:delimited) %>円
    </div>
    <div>
      送料 <%= @order.postage %>円
    </div>
    <div>
      請求金額合計 <%= (@sum+@order.postage).to_s(:delimited) %>円
    </div>
