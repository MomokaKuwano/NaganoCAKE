<div class="container">

  <div class="row">
    <div class="mx-auto col-10">
      <h5 class="mt-5 mb-5">
        <span1 class="px-3">
          配送先編集
        </span1>
      </h5>
    </div>
  </div>

    <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>

      <div class="row col-11 mb-2">
        <div class="col-3">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-form-label" %>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :postal_code, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <div class="row col-11 mb-2">
        <div class="col-3">
        <%= f.label :address, "住所", class: "col-form-label" %>
        </div>
        <div class="col-sm-6">
        <%= f.text_field :address, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <div class="row col-11 mb-2">
        <div class="col-3">
        <%= f.label :name, "宛名", class: "col-form-label" %>
        </div>
        <div class="col-sm-3">
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <div class="col-2 mt-4 offset-3">
        <%= f.submit "変更内容を保存", class: "btn btn-success" %>
        <% end %>
      </div>

</div>