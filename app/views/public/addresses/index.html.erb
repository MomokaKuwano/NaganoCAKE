<div class="container">

  <div class="row">
    <div class="mx-auto col-10">
      <h5 class="mt-5 mb-5">
        <span1 class="px-3">
          配送先登録/一覧
        </span1>
      </h5>
    </div>
  </div>

   <%= form_with model: @address, url: addresses_path do |f| %>

  <div class="row col-11 mb-2">
    <div class="col-3">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-form-label" %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :postal_code, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="row col-11 mb-2">
    <div class="col-3">
    <%= f.label :address, "住所", class: "col-form-label" %>
    </div>
    <div class="col-sm-6">
    <%= f.text_field :address, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="row col-11 mb-2">
    <div class="col-3">
    <%= f.label :name, "宛名", class: "col-form-label"  %>
    </div>
    <div class="col-sm-3">
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="col-2 mt-3 offset-3">
    <%= f.submit "新規登録", class: "btn btn-success" %>
    <% end %>
  </div>

    <div class="col-10 mt-4">
      <table class="table table-bordered border-dark">
        <div class="row">
          <thead class="table-light">
            <tr>
              <th class="col-2">
                郵便番号
              </th>
              <th class="col-4">
                住所
              </th>
              <th class="col-2">
                宛名
              </th>
              <th class="col-2">
              </th>
            </tr>
          </thead>
          <tbody>
            <% @addresses.each do |address| %>
            <tr>
              <td>
                <%= address.postal_code %>
              </td>
              <td>
                <%= address.address %>
              </td>
              <td>
                <%= address.name %>
              </td>
              <td>
                <%= link_to '編集する', edit_address_path(address.id), class: "btn btn-success btn-sm" %>
                <%= link_to '削除する', address_path(address.id), method: :delete, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </div>
    </table>
</div>