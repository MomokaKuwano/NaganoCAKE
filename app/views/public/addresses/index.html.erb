<h3>配送先登録/一覧</h3>

 <%= form_with model: @address, url: addresses_path do |f| %>

  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :name, "宛名" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

  <table>
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
　　<% @addresses.each do |address| %>
  　<div>
      <tbody>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to '編集する', edit_address_path(address.id) %>
            <%= link_to '削除する', address_path(address.id), method: :delete %>
          </td>
        </tr>
      </tbody>
    </div>
  </table>

  <% end %>