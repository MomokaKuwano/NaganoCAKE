<div class="container">
  <div class="row mt-5">

    <div class="col-5">
      <%= image_tag @item.get_image, size: "400x300" %>
    </div>

    <div class="col-7">
      <div class="row">
        <h2 class="mt-3 mb-2">
          <strong><%= @item.name %></strong>
        </h2>
      </div>
      <div class="row">
        <div class="mb-5">
          <h5>
            <%= @item.introduction%>
          </h5>
        </div>
      </div>
      <div class="row">
        <h4 class="mb-5">
        ¥<%= @item.price.to_s(:delimited) %>
        <span class="small">(税込)</span>
       </h4>
      </div>

      <%= form_with model: @cart_item, url: cart_items_path, scope: :cart_item do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <div class="row">
          <div class="col-2">
            <%= f.select :amount, *[1..10] %>
          </div>
          <div class="col">
            <%= f.submit 'カートに入れる', class: "btn btn-success btn-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>