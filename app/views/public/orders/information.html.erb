<div class="container">
    <div class="row mx-auto col-10">
      <h5 class="mt-5 mb-3">
        <span1 class="px-3">
          注文情報確認
        </span1>
      </h5>
    </div>
    <div class="row mx-auto">
      <div class="col-7">
        <table class="table table-bordered">
          <thead class="table-light">
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>

          <tbody>
            <% @cart_items.each do |cart_item|%>
              <tr>
                <td>
                  <%= cart_item.item.name %>
                </td>
                <td>
                  <%= cart_item.item.add_tax_price.to_s(:delimited)  %>
                </td>
                <td>
                  <%= cart_item.amount %>
                </td>
                <td>
                  <%= cart_item.sum_price.to_s(:delimited) %>
                </td>
                <% end %>
              </tr>
          </tbody>
        </table>
      </div>

      <div class="col-3">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th scope="row">送料</th>
              <td><%= @order.postage %></td>
            </tr>
            <tr>
              <th scope="row">商品合計</th>
              <td><%= @total.to_s(:delimited) %></td>
            </tr>
            <tr>
              <th scope="row">請求金額</th>
              <td><%= @order.billing_amount.to_s(:delimited) %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row mx-auto my-3">
      <div class="col-2">
        <strong>支払い方法</strong>
      </div>
      <div class="col-3">
        <%= @order.payment_method_i18n %>
      </div>
    </div>

    <div class="row mx-auto my-3">
      <div class="col-2">
        <strong>お届け先</strong>
      </div>
      <div class="col-7">
        〒<%= @order.postal_code %>
          <%= @order.address %><br>
          <%= @order.name %>
      </div>
    </div>

    <div class="row">
      <div class="offset-5 mt-5">
          <%= form_with model: @order, url: orders_path, local: true do |f| %>
          <%= f.hidden_field :postage %>
          <%= f.hidden_field :order_status %>
          <%= f.hidden_field :billing_amount %>
          <%= f.hidden_field :payment_method %>
          <%= f.hidden_field :postal_code %>
          <%= f.hidden_field :address %>
          <%= f.hidden_field :name %>
          <%= f.submit "注文を確定する", class: "btn btn-success" %>
          <% end %>
      </div>
    </div>

</div>