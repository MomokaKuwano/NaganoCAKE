<h3>注文情報確認</h3>
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @cart_items.each do |cart_item|%>
          <tr>
            <td>
              <%= cart_item.item.name %>
            </td>
            <td>
              <%= cart_item.item.add_tax_price.to_s(:delimited)  %>
            </td>
            <td>
              <%= cart_item.amount %>
            </td>
            <td>
              <%= cart_item.sum_price.to_s(:delimited) %>
            </td>
            <% end %>
          </tr>
      </tbody>
    </table>

    <div>送料 <%= @order.postage %></div>
    <div>商品合計 <%= @total.to_s(:delimited) %></div>
    <div>請求金額 <%= @order.billing_amount.to_s(:delimited) %></div>

    <h4>支払い方法</h4>
      <%= @order.payment_method_i18n %>

    <h4>お届け先</h4>
      〒<%= @order.postal_code %>
      <%= @order.address %><br>
      <%= @order.name %>

    <div>
    <%= link_to "注文を確定する", orders_path %>
    </div>