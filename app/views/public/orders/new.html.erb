<h3>注文情報入力</h3>

  <p>支払い方法</p>
    <%= form_with model: @order, url:  orders_information_path do |f|%>

      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>

  <p>お届け先</p>
    <div>
      <%= f.radio_button :select_address, 0 %>
      <%= f.label :select_address, "ご自身の住所" %><br>
      　〒<%= @customer.postal_code %>
      　<%= @customer.address %><br>
      　<%= @customer.last_name%>
      　<%= @customer.first_name%>
    </div>
    <div>
      <%= f.radio_button :select_address, 1 %>
      <%= f.label :select_address, "登録済住所から選択" %>
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
    </div>
    <div>
      <%= f.radio_button :select_address, 2 %>
      <%= f.label :select_address, "新しいお届け先" %>
        <div class="field">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)" %><br />
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>
        <div class="field">
          <%= f.label :address, "住所" %><br />
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
        <div class="field">
          <%= f.label :name, "宛名" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
    </div>

    <%= f.submit '確認画面へ進む' %>
    <% end %>

